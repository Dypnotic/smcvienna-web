---
import Layout from '../layouts/Layout.astro'

const metaData = {
	title: 'Locations',
	desciption: 'Viennese Locations of the Syro Malabar Church',
}
---

<Layout {...metaData}>
	<h1>Locations</h1>
	<section>
		<img src={`${import.meta.env.PUBLIC_ASSETS}images/locations/meidling-church.jpg`} alt='The church in Meidling' width="300">
		<h2>Pfarre Maria Lourdes</h2>
		Address: <br />
		<address>
			Tivoligasse 20, <br />
			1120 Vienna<br />
			<br />
			or for the church entrance:<br />
			<br />
			Haschkagasse 5, <br />
			1120 Vienna
		</address>
		<p>Primary Catechism (1 to 7th Class) at <em>10:45 hrs.</em></p>

		<p>Sunday Mass at <em>11:30 hrs.</em></p>
	</section>
	<section>
		<img src={`${import.meta.env.PUBLIC_ASSETS}images/locations/saikogasse-church.jpg`} alt='The church in Saikogasse' width="300">
		<h2>Pfarre Auferstehung Christi</h2>
		Address: <br />
		<address>
			Saikogasse 8, <br />
			1220 Vienna
		</address>
		<p>Primary Catechism (1 to 7th Class) at <em>16:15 hrs.</em></p>

		<p>Sunday Mass at <em>17:00 hrs.</em></p>
	</section>
</Layout>
