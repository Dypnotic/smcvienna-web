---
import GalleryCard from '../../components/GalleryCard.svelte'
import Layout from '../../layouts/Layout.astro'

const metaData = {
	title: 'Gallery',
	desciption: 'Photos of various Syro Malabar Community events.',
}
---

<Layout {...metaData}>
	<h1>Gallery</h1>
	<div class='grid'>
		<GalleryCard
			title='Ecucation day 2023'
			url='/gallery/2023/2023-01-education-day'
			image={`${
				import.meta.env.PUBLIC_ASSETS
			}images/2023/2023-01-education-day/thumbnails/1.jpg`}
			imageAlt='Photo from education-day 2023'
		/>
		<GalleryCard
			title='Christmas Carol Singing'
			url='/gallery/2022/2022-dec-carol-singing'
			image={`${
				import.meta.env.PUBLIC_ASSETS
			}images/2022/2022-dec-carol-singing/thumbnails/1.jpg`}
			imageAlt='Christmas Carol Singing 2022'
		/>
		<GalleryCard
			title='Awake Austria 2022'
			url='/gallery/2022/2022-nov-awake-austria'
			image={`${
				import.meta.env.PUBLIC_ASSETS
			}images/2022/2022-nov-awake-austria/thumbnails/1.jpg`}
			imageAlt='Awake Austria 2022'
		/>
		<GalleryCard
			title='Ruby Jubilee Event'
			url='/gallery/2022/2022-oct-ruby-jubilee-event'
			image={`${
				import.meta.env.PUBLIC_ASSETS
			}images/2022/2022-oct-ruby-jubilee-event/thumbnails/10.jpg`}
			imageAlt='Ruby Jubilee Event'
		/>
		<GalleryCard
			title='Medjugorge Pilgrimage'
			url='/gallery/2022/2022-oct-medjugorge-pilgrimage'
			image={`${
				import.meta.env.PUBLIC_ASSETS
			}images/2022/2022-oct-medjugorge-pilgrimage/thumbnails/1.jpg`}
			imageAlt='Medjugorge Pilgrimage 2022'
		/>
	</div>
</Layout>
<style lang='scss'>
	.grid {
		display: flex;
		flex-flow: row wrap;
		gap: 32px;
	}
</style>
