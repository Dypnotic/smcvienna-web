---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.svelte'

const metaData = {
	title: 'Welcome to Mar Jose Puthenveettil 2023',
	desciption: 'Welcome to Mar Jose Puthenveettil 2023',
}

const amountOfImages = 75

let images = []

for (let i = 1; i <= amountOfImages; i++) {
	images.push({
		largeURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2023/2023-07-welcome-to-mar-jose-puthenveettil/${i}.jpg`,
		thumbnailURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2023/2023-07-welcome-to-mar-jose-puthenveettil/thumbnails/${i}.JPG`,
		width: 1200,
		height: 800,
	})
}
---

<Layout {...metaData}>
	<h1>Welcome to Mar Jose Puthenveettil 2023</h1>
	<Gallery
		client:load
		galleryID='july-2023-welcome-to-mar-jose-puthenveettil'
		images={images}
	/>
</Layout>
