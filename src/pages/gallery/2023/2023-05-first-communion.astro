---
import Layout from '../../../layouts/Layout.astro';
import Gallery from '../../../components/Gallery.svelte'

const metaData = {
	title: 'First Holy Communion 2023',
	desciption: 'Photos from the First Holy Communion 2023',
}

const amountOfImages = 77;

let images = [];

for (let i = 1; i <= amountOfImages; i++) {
	images.push(            {
              largeURL:
                `${import.meta.env.PUBLIC_ASSETS}images/2023/2023-05-first-communion/${i}.jpg`,
              thumbnailURL:
                `${import.meta.env.PUBLIC_ASSETS}images/2023/2023-05-first-communion/thumbnails/${i}.jpg`,
              width: 1200,
              height: 800,
            }
						)
}
---

<Layout {...metaData}>
	<h1>First Holy Communion 2023</h1>
  	<Gallery client:load galleryID="may-2023-first-communion" images={images} />
</Layout>
