---
import Layout from '../../../layouts/Layout.astro';
import Gallery from '../../../components/Gallery.svelte'

const metaData = {
	title: 'Father Thomas Birthday 2023',
	desciption: 'Photos from Father Thomas Birthday 2023',
}

const amountOfImages = 12;

let images = [];

for (let i = 1; i <= amountOfImages; i++) {
	images.push(            {
              largeURL:
                `${import.meta.env.PUBLIC_ASSETS}images/2023/2023-05-father-thomas-birthday/${i}.jpg`,
              thumbnailURL:
                `${import.meta.env.PUBLIC_ASSETS}images/2023/2023-05-father-thomas-birthday/${i}.jpg`,
              width: 1200,
              height: 800,
            }
						)
}
---

<Layout {...metaData}>
	<h1>Father Thomas Birthday 2023</h1>
  	<Gallery client:load galleryID="may-2023-father-thomas-birthday" images={images} />
</Layout>
