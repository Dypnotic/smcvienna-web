---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.svelte'

const metaData = {
	title: 'Catechism Teachers Klausurtagung 2023',
	desciption: 'Catechism Teachers Klausurtagung 2023',
}

const amountOfImages = 3; 

let images = []

for (let i = 0; i <= amountOfImages; i++) {
	images.push({
		largeURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2023/2023-12-catechism-teachers-klausurtagung/${i}.jpg`,
		thumbnailURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2023/2023-12-catechism-teachers-klausurtagung/thumbnails/${i}.jpg`,
		width: 1200,
		height: 800,
	})
}
---

<Layout {...metaData}>
	<h1>{metaData.title}</h1>
	<Gallery
		client:load
		galleryID='catechism-teachers-klausurtagung-12-2023'
		images={images}
	/>
</Layout>
