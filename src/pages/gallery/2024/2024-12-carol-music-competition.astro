
---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.svelte'

const metaData = {
	title: 'Ecumenical Carol Music Competition 8th Dec 2024',
	desciption: 'Ecumenical Carol Music Competition 8th Dec 2024',
}

const amountOfImages = 199; 

let images = []

for (let i = 0; i <= amountOfImages; i++) {
	images.push({
		largeURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2024/2024-12-carol-music-competition/${i}.jpg`,
		thumbnailURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2024/2024-12-carol-music-competition/thumbnails/${i}.jpg`,
		width: 1200,
		height: 800,
	})
}
---

<Layout {...metaData}>
	<h1>{metaData.title}</h1>
	<Gallery
		client:load
		galleryID='carol-music-competition-2024-11'
		images={images}
	/>
</Layout>
