---
import Layout from '../../../layouts/Layout.astro'
import Gallery from '../../../components/Gallery.svelte'

const metaData = {
	title: 'Birthday celebration of Rev.Fr. Wilson Mecheril on Sunday 10th of March 2024',
	desciption: 'Birthday celebration of Rev.Fr. Wilson Mecheril on Sunday 10th of March 2024',
}

const amountOfImages = 23; 

let images = []

for (let i = 0; i <= amountOfImages; i++) {
	images.push({
		largeURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2024/2024-03-rev-mecheril-birthday/${i}.jpg`,
		thumbnailURL: `${
			import.meta.env.PUBLIC_ASSETS
		}images/2024/2024-03-rev-mecheril-birthday/thumbnails/${i}.jpg`,
		width: 1200,
		height: 800,
	})
}
---

<Layout {...metaData}>
	<h1>{metaData.title}</h1>
	<Gallery
		client:load
		galleryID='rev-mecheril-birthday-03-2024'
		images={images}
	/>
</Layout>
