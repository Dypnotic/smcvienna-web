---
import "@fontsource/noto-serif-malayalam/400.css"
import "@fontsource/noto-serif-malayalam/700.css"
import "@fontsource/noto-serif/400.css"
import "@fontsource/noto-serif/700.css"
import Header from '../components/Header.svelte'
import Sidebar from "../components/Sidebar.svelte"
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<Header client:load/>
		</div>
		<div class="sidebar">
			<Sidebar />
		</div>
		<main>
			<slot />
		</main>
	</body>
</html>

<style lang='scss' is:global>
	$max-width: 1000px;
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--gradient-bg: linear-gradient(222deg, rgb(123 53 204), rgb(228 179 24), rgb(49 170 102), rgb(28 183 171));

		--color-text: rgb(17 11 24);
		--color-bg: rgb(216 208 202);
		--color-lines: rgb(182 177 166);
		--color-links: rgb(123 53 204);

		--max-width: 1000px;
	}

	@keyframes  gradientAnimation {
    0% {
      background-position: 91% 0%;
    }
    50% {
      background-position: 10% 100%;
    }
    100% {
      background-position: 91% 0%;
    }
  }

	:where(*){
		box-sizing: border-box;
	}

	:where(html) {
    font-family: "Noto Serif", serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
		width: 100%;
	}
	[lang="ml"] {
			font-family: "Noto Serif Malayalam", serif;
	}
	

	:where(body) {
		margin: 0;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
		@media (min-width: $max-width) {
			display: grid;
			grid-template-columns: 250px 250px 250px 250px;
			grid-template-areas: 
				"header header header header"
				"sidebar main main main";
			justify-content: center;
		}
	}

	:where(h1, h2, h3, h4, h5, h6) {
		margin: 0 0 2em 0;
	}

	:where(img) {
		max-width: 100%;
	}

	:where(a) {
		text-decoration: none;
		background: linear-gradient(var(--color-links) 0 0) calc(100% - var(--p,0%)) / var(--p,0%) no-repeat;
        transition: 0.4s, background-position 0s;
		color: var(--color-text);
		&:hover, &:active {
				--p: 100%;
				color: var(--color-bg);
		}
	}

	.header {
		grid-area: header;
		position: sticky;
		top: 0;
	}

	.sidebar {
		display: none;
		grid-area: sidebar;
		position: sticky;
		top: 182px;
		@media (min-width: $max-width) {
			display: block;
		}
	}

	main{
		padding: 16px;
		width: 100%;
		grid-area: main;
	}


</style>
